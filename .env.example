# Email Configuration
EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_app_password
EMAIL_RECIPIENT=your_email@example.com
EMAIL_SENDER=your_email@example.com
EMAIL_RECIPIENTS=your_email@example.com

# SMTP Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com

# Bot Settings
ENABLE_NOTIFICATIONS=True
PROFIT_THRESHOLD=50
RATE_LIMIT_DELAY=5
EMAIL_INTERVAL_MINUTES=30

# Database Settings
DATABASE_PATH=sneaker_releases.db

# Monitoring Settings
CHECK_INTERVAL=300  # 5 minutes in seconds
MAX_RELEASES_PER_CHECK=50

# MongoDB connection details
MONGODB_CONNECTION_STRING=your_mongodb_connection_string
MONGODB_DATABASE=sneakerbot
MONGODB_COLLECTION=deals

# StockX API Settings
STOCKX_API_KEY=your_stockx_api_key
STOCKX_CLIENT_ID=your_stockx_client_id
STOCKX_CLIENT_SECRET=your_stockx_client_secret
STOCKX_COOKIE=your_stockx_cookie

# Railway Settings
RAILWAY_CALLBACK_URL=https://your-app-name.up.railway.app/auth/callback
